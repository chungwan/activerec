<h1>Product Menu</h1>

<table class="table table-bordered">
  <tr>
    <th>Name</th>
    <th>Max images</th>
    <th>Price</th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.max_images %></td>
    <td><%= product.price %></td>
    <td><%= link_to 'Select', new_item_path(product) %></td>
  </tr>
<% end %>
</table>

